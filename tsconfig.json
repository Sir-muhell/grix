{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*", "server.ts", "server.js", "./types"],
  "exclude": ["node_modules", "dist"]
}
